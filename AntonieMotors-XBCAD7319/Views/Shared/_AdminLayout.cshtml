<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        /* Sidebar styling */
        #sidebar-wrapper {
            background-color: #9DC183; /* Dark sidebar color */
            color: #fff;
            height: 100vh;
            position: fixed;
            width: 250px;
        }

        /* Business logo and name styling */
        .sidebar-logo {
            text-align: center;
            padding: 20px;
            margin-top: 10px;
        }

            .sidebar-logo img {
                width: 100px;
                height: 100px;
                /*   border-radius: 90%;  makes trhe boirder circle */
                object-fit: cover;
            }

            .sidebar-logo h3 {
                color: black; /* Set text color to white for better contrast */
                font-size: 1.25rem;
                margin-top: 10px;
                font-weight: bold;
            }

        /* Set the text color to white for all menu items */
        #sidebar-wrapper .list-group-item {
            background-color: #9DC183;
            color: black; /* Text color set to white */
            border: none;
        }

            /* Change color for hover and active items */
            #sidebar-wrapper .list-group-item:hover,
            #sidebar-wrapper .list-group-item:focus {
                background-color: #1abc9c;
                color: #fff;
            }

            /* Style the "Delete Account" item to keep it red */
            #sidebar-wrapper .list-group-item.text-danger {
                color: #e74c3c; /* Red color */
            }

                #sidebar-wrapper .list-group-item.text-danger:hover,
                #sidebar-wrapper .list-group-item.text-danger:focus {
                    background-color: #e74c3c;
                    color: #fff;
                }

        #sidebar-wrapper .sidebar-heading {
            font-size: 1.5rem;
            padding: 1rem;
            border-bottom: 1px solid #fff;
            color: white;
        }


        .border-right {
            border-right: 2px solid #1abc9c;
        }

        /* Icon styling */
        .list-group-item i {
            margin-right: 10px;
        }

        /* My Profile section styling */
        .profile-section {
            margin-top: 20px;
            padding-top: 10px;
            border-top: 1px solid #fff;
        }

            .profile-section h5 {
                padding: 10px;
                font-size: 1.25rem;
            }

        /* Page Content */
        #page-content-wrapper {
            background-color: #f8f9fa; /* Light background for content */
            margin-left: 250px;
            height: 100vh;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <!-- Business logo and name -->
            <div class="sidebar-logo">
                <img src="~/Images/amlogo.jpg" alt="Business Logo" />
                <h3>Antonie Motors</h3>
            </div>

            <div class="sidebar-heading">Admin Dashboard</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-tachometer-alt"></i> Home
                </a>
                <a href="@Url.Action("QuoteGenerator", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-file-invoice-dollar"></i> Quote Generator
                </a>
                <a href="@Url.Action("CustomerManagement", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-users"></i> Customer Management
                </a>
                <a href="@Url.Action("VehicleManagement", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Vehicle Management
                </a>
                <a href="@Url.Action("Services", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-car"></i> Services
                </a>
                <a href="@Url.Action("InventoryManagement", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-warehouse"></i> Inventory Management
                </a>
                <a href="@Url.Action("Analytics", "Admin")" class="list-group-item list-group-item-action">
                    <i class="fas fa-chart-line"></i> Analytics
                </a>
            </div>
            <hr class="my-3"> <!-- Divider line -->
            <div class="sidebar-heading">My Profile</div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="fas fa-key"></i> Change Password
                </a>
                <a href="#" class="list-group-item list-group-item-action text-danger">
                    <i class="fas fa-trash-alt"></i> Delete Account
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="ml-auto">
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>