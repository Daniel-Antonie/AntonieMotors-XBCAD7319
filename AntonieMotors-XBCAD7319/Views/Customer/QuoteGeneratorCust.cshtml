@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@model QuoteRequestModel

<div class="container-fluid" style="margin-left: 250px;">
    <h1>Request a Quote</h1>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success">
            @TempData["SuccessMessage"]
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger">
            @TempData["ErrorMessage"]
            </div>
    }

    <form asp-action="SendQuoteRequest" method="post">
        <input type="hidden" asp-for="CustomerId" />

        <div class="form-group">
            <label asp-for="CarMake">Make of Car</label>
            <input class="form-control" asp-for="CarMake" />
        </div>
        <div class="form-group">
            <label asp-for="CarModel">Model of Car</label>
            <input class="form-control" asp-for="CarModel" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description for the quote</label>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Please Enter a phone number</label>
            <input class="form-control" asp-for="PhoneNumber" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>