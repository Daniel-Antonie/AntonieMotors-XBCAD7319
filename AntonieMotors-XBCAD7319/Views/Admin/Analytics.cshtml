@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid" style="margin-left: 250px;">
<h1>Analytics</h1>
<p>View analytics and metrics for the business performance.</p>

@*     <div>
        
        <canvas id="myPieChart" width="400" height="400"></canvas>
    </div> *@

   
    <!-- Script for the Pie Chart -->
    <div >
        <h2>Your Services</h2>
        <br />
        <div class="col-md-6">
            <canvas id="completedServicesChart"></canvas>
        </div>
    </div>


</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('completedServicesChart').getContext('2d');
        const myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Completed', 'Busy', 'Not Started'],
                datasets: [{
                    data: [@ViewBag.NumServicesCompleted, @ViewBag.NumServicesBusy, @ViewBag.NumServicesNotStarted], // Example dynamic data
                    backgroundColor: [
                        '#83D19E',
                        '#F3BD6C',
                        '#D05353'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });
    });
</script>
