@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">

    <div>

        <h2>Edit account</h2>

        <a href="@Url.Action("SendPasswordResetEmail", "Admin")" class="list-group-item list-group-item-action">
            <i class="fas fa-key"></i> Change Password
        </a>
        <form action="@Url.Action("DeleteAccount", "Admin")" method="post" onsubmit="return confirm('Are you sure you want to delete your account?');">
            <button type="submit" class="list-group-item list-group-item-action text-danger" style="border: none; background: none; width: 100%;">
                <i class="fas fa-trash-alt"></i> Delete Account
            </button>
        </form>

    </div>
</div>

