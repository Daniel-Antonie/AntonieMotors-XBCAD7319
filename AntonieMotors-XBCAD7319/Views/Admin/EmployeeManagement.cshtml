@model List<EmployeeModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" style="margin-left: 250px;">
    <h2>Employee Management</h2>
    <p>View and manage all employees under your management.</p>

    <!-- Employee Table -->
    <div class="card">
        <table class="table table-bordered">
            <thead>
                <tr>
                   @*   <th>Employee ID</th>  *@
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        @*  <td>@employee.EmployeeID</td>  *@
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>
                            <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeID" class="btn btn-primary">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        <p>&copy; 2024 - Antonie Motors - Privacy Policy</p>
    </footer>
</div>
