@model List<EmployeeModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" style="margin-left: 250px;">
    <h2>Employee Management</h2>
    <p>View and manage all employees under your management.</p>

    <!-- Employee Table -->
    <div class="card">
        <table class="table table-bordered">
            <thead>
                <tr>
                   @*   <th>Employee ID</th>  *@
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">No employees found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.firstName</td>
                            <td>@employee.lastName</td>
                            <td>@employee.email</td>
                            <td>@employee.phone</td>
                            <td>
                                <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeID" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

    <footer>
        <p>&copy; 2024 - Antonie Motors - Privacy Policy</p>
    </footer>
</div>
