@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" ">
    <h1>Inventory Management</h1>
    <p>View all parts and inventory stock levels.</p>
    <table class="table" style="border: 1px solid black; border-collapse: collapse; width: 100%;">
        <thead>
            <tr style="border: 1px solid black;">
                <th style="border: 1px solid black;">Part Name</th>
                <th style="border: 1px solid black;">Quantity</th>
                <th style="border: 1px solid black;">Cost</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.inventory != null)
                {
                  foreach (var inventoryPart in ViewBag.inventory)
                    {
                    <tr style="border: 1px solid black;">
                        <td style="border: 1px solid black;">@inventoryPart.partName</td>
                        <td style="border: 1px solid black;">@inventoryPart.stockCount</td>
                        <td style="border: 1px solid black;">@inventoryPart.costPrice</td>
                    </tr>
                    }
                }
        </tbody>
    </table>
</div>
